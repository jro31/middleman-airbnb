---
title: Le Wagon - Middleman
---

<div id="home">
  <div class="home-content">
    <div class="banner" style="background-image: url('images/mountains.jpg');">
      <div class="banner-content">
        <h1>Air DnD</h1>
        <p>Rent quiet flats all over the world</p>
        <!-- <a class="btn btn-primary btn-lg">Start now</a> -->
        <form action="#" class="form-inline">
          <input type="text" class="form-control" placeholder="Where?">
          <input type="text" class="form-control" placeholder="When?">
          <select>
            <option value="1">1 guest</option>
            <option value="2">2 guests</option>
            <option value="3">3 guests</option>
          </select>
          <button type="search" class="btn btn-primary">Search</button>
        </form>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <% data.flats.each do |flat| %>
        <div class="col-md-4">
          <div class="card" style="background-image: url('<%= flat.image_path %>');">
            <h2><%= flat.name %></h2>
            <p><%= flat.city_name.capitalize %></p>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
